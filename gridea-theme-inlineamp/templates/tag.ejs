<!doctype html>
<html amp lang="<%= site.customConfig.lang %>">

<head>
  <%- include('./includes/head', { siteTitle: `${tag.name} | ${themeConfig.siteName}` }) %>
</head>


<body class="home blog">
  <input type="checkbox" id="header-menu-button">
  <header id="commonTop">
    <div class="top-container">
      <div class="title-menus-area">
        <a class="blog-title" href="<%= themeConfig.domain %>"><%= themeConfig.siteName %></a>
        <label for="header-menu-button" class="top-menus">
          <nav class="menu-menu-1-container">
            <ul id="menu-menu-1" class="menu">
              <% menus.forEach(function(menu) { %>
              <% if (menu.openType === 'External') { %>
              <li>
                <a href="<%= menu.link %>" aria-current="page"><%= menu.name %></a></li>
              <% } else { %>
              <li>
                <a href="<%= menu.link %>" aria-current="page"><%= menu.name %></a></li>
              <% } %>
              <% }); %>
            </ul>
          </nav>
        </label>
      </div>
      <div class="tagline">
        <div class="tagline-main">分类：<%= tag.name %></div>
      </div>
    </div>
  </header>

  <main>
    <%- include('./includes/post-list') %>
    <%- include('./includes/sidebar') %>
    <%- include('./includes/scrolltop') %>

    
  </main>

  <%- include('./includes/footer') %>


</body>

</html>