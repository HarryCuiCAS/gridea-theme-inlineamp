<!doctype html>
<html amp lang="<%= site.customConfig.lang %>">

<head>
  <%- include('./includes/post-head', { siteTitle: `${post.title} | ${themeConfig.siteName}` }) %>
  <script async custom-element="amp-bind" src="https://cdn.ampproject.org/v0/amp-bind-0.1.js"></script>
  <script async custom-element="amp-social-share" src="https://cdn.ampproject.org/v0/amp-social-share-0.1.js"></script>
  <script async custom-template="amp-mustache" src="https://cdn.ampproject.org/v0/amp-mustache-0.2.js"></script>
</head>

<body>
  <input type="checkbox" id="header-menu-button">
  <%- include('./includes/header') %>
  <main>
    <div class="main-container">

      <div class="article-info">
        <% if (post.tags[0]) { %>
          <div class="flex-box meta-category">
            <a class="post-cate" href="<%= post.tags[0].link %>"><%= post.tags[0].name %></a></div>
          <% }; %>
        <h2 class="article-title">
          <a href="<%= post.link %>"><%= post.title %></a>
        </h2>
        <div class="flex-box">
          <div class="flex-box post-meta-box">
            <a class="post-meta" href="<%= themeConfig.domain %>"><span
                class="iconfont icon-mr-postmeta"></span><%= site.customConfig.avatar %></a>
            <span class="post-meta"><span class="iconfont icon-mr-postmeta"></span><%= post.dateFormat %></span>
            <!-- <span class="post-meta"><span class="iconfont icon-mr-postmeta"></span>0</span>
            <span class="post-meta"><span class="iconfont icon-mr-postmeta"></span>59</span>
            <span class="post-meta"><span class="iconfont icon-mr-postmeta icon-like-sp"></span><span
                data-amp-bind-text="likes">1</span></span> -->
          </div>
        </div>
      </div>
      <div class="content">
        <%- post.content %>
      </div>
      <!-- <form class="likes-form" method="post" action-xhr="//hhacker.com/wp-admin/admin-ajax.php" target="_top"
        on="submit-success: AMP.setState({'likes': event.response.likes,'likesClass': event.response.class})">
        <input type="hidden" name="post_id" value="1494"><input type="hidden" name="action" value="likes"><button
          type="submit" data-amp-bind-class="likesClass" class="likes-button " data-amp-bind-text="likes">
          1 </button>
      </form> -->
      <% if (post.nextPost && !post.hideInList) { %>
      <nav class="post-nav">
        <% if (post.prevPost) { %>
        <div class="nav-previous">
          <a class="post-nav-link-active" title="<%= post.prevPost.title %>" href="<%= post.prevPost.link %>">上一篇文章</a>
        </div>
        <% } %>
        <% if (post.nextPost) { %>
        <div class="nav-next">
          <a class="post-nav-link-active" title="<%= post.nextPost.title %>" href="<%= post.nextPost.link %>">下一篇文章</a>
          <% } %>

        </div>
      </nav>
      <% } %>

      <%- include('./includes/share') %>

    </div>

    <div class="sidebar">
      <aside id="profile-2" class="widget widget_profile">
        <div class="profile-box">
          <div class="profile-avatar">
            <amp-img src="<%= themeConfig.domain %>/images/avatar.png?v=<%= site.utils.now %>" alt="avatar"
              layout="fill"></amp-img>
          </div>
          <div class="profile-content">
            <div class="amp-wp-681d4ff">
              <%- site.customConfig.metaDescription || themeConfig.siteDescription %>
            </div>

          </div>
        </div>
      </aside>
      <aside id="search-10" class="widget widget_search">
        <form target="_top" role="search" method="get" class="search-form" action="//hhacker.com/">
          <input required type="text" class="search-field" placeholder="搜索…" value="" name="s"><button type="submit"
            class="search-submit"></button>
        </form>
      </aside>

    </div> <%- include('./includes/scrolltop') %>
  </main>
  <%- include('./includes/footer') %>

</body>

</html>